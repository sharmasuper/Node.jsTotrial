    <!-- comments section  -->

     <h2>Add a Comment</h2>
     <form action="/comment/<%= post.id %>" method="post">
       <input type="text" name="comment" placeholder="Type your comment here" >
       <button type="submit">Submit</button> 
     </form>
     <% if(post.comment && post.comment.length > 0) {%>
          <h2>Comment : </h2>
          <ul>
            <% post.comment.forEach((comment)=>{%>
                 <li><%= comment %></li>
           <%})%>   
          </ul>
    <% }  %> 
       


